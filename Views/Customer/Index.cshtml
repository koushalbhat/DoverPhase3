@model IEnumerable<Laptop_Store.Models.Laptop>

@{
    ViewData["Title"] = "Index";
}

<h1>Buy a Super Cool laptop for yourself from our resputed Sellers!!</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img class="bd-placeholder-img card-img-top" width="100" src="@item.ImageUrl" />

                <div class="card-body">
                    <p class="card-text"><strong>@item.Name</strong></p>
                    <p class="card-text">@item.Description</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a type="button" class="btn btn-outline-primary btn-sm" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-laptopId ="@item.LaptopId">Add To Cart</a>
                        </div>
                        <strong>@item.Price.ToString("c")</strong>
                        <p class="card-text">Sold By: @item.Seller.Name</p>
                    </div>
                </div>
            </div>
        </div>

    }
</div>
<a type="button" class="btn btn-danger" asp-controller="Home" asp-action="Index">Logout</a>


